{
    "compilerOptions": {
        "checkJs": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "es2020", // Change this to your desired target version
        "lib": [
            "es2016",
            "es2021",
            "dom",
            "esnext.asynciterable",
            "esnext",
            "es6"
        ],
        "sourceMap": false,
        "outDir": "build", // Ensure this matches your build script output directory
        "allowJs": true,
        "types": ["node"],
        "skipLibCheck": true
    },
    "exclude": ["node_modules", "build"],
    "include": ["./migrations/**/*", "src/**/*", "newrelic.js"]
}
